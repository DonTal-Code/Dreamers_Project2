<!doctype html>
<html lang="fr">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="x-ua-compatible" content="ie=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">

		<title>Dreamception
			{% block title %}{% endblock %}
		</title>

		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
		<link rel="stylesheet" href="/assets/css/style.css/"> {% block stylesheet %}{% endblock %}
		<link rel="icon" href="/assets/images/logoBB.jpg">
	</head>

	<body class="body">
        {% block content %}
		{% endblock %}
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
		{% block javascript %}
			<script>
				if (localStorage.getItem('animeIsPlayed') === false || !localStorage.getItem('animeIsPlayed')) {
				let body = document.getElementById('load');
				body.classList.add("bg-first");
				console.log(body);

				setTimeout(function () {
				body.classList.remove("bg-first");
				localStorage.setItem('animeIsPlayed', true);
				}, 3000);

				setTimeout();
				}

				window.onbeforeunload = function () {
				localStorage.removeItem('animeIsPlayed');
				return '';
				};
			</script>
		{% endblock %}
		{% include "/_user_footer.html.twig" %}	
	</body>
</html>

