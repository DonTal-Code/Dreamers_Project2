{% extends 'layout.html.twig' %}

{% block content %}
	<div class="container-fluid" id="background-admin">
		<div class="row">
			{% include "_nav_user.html.twig" %}
			<main class="container-fluid col-lg-11" id="edit">
				<h1 class="text-white text-center">Modifier le compte de {{ session.user.username }}</h1>
				<section class="container">
                    {% for error in errors %}
                        <div class="alert alert-danger" role="alert">   
                            <p> {{ error }} </p>
                        </div>
                    {% endfor %}
                    <form method="post">
                        <input type="hidden" value="{{ user.id }}" name="id">
                        <input type="hidden" value="0" name="is_admin">
                        <div class="mb-3">
                            <label for="username" class="form-label"></label>
                            <input type="text" class="form-control" id="username" placeholder="Pseudo" name="username"  value="{{ session.user.username }}">
                            {% if errors.username is defined and not empty %}
                            <div class="alert alert-danger" role="alert">       
                                <p>{{ errors.username }}</p>
                            </div>
                            {% endif %}
                            {% if errors.username1 is defined and not empty %}
                            <div class="alert alert-danger" role="alert">       
                                <p>{{ errors.username1 }}</p>
                            </div>
                            {% endif %}
                        </div>
                        <div class="mb-3">
                            <label for="lastname" class="form-label"></label>
                            <input type="text" class="form-control" id="lastname" placeholder="Nom" name="lastname" value="{{ session.user.lastname }}">
                            {% if errors.lastname is defined and not empty %}
                            <div class="alert alert-danger" role="alert">       
                                <p>{{ errors.lastname }}</p>
                            </div>
                            {% endif %}
                        </div>
                        <div class="mb-3">
                            <label for="firstname" class="form-label"></label>
                            <input type="text" class="form-control" id="firstname" placeholder="Prénom" name="firstname" value="{{ session.user.firstname }}">
                            {% if errors.firstname is defined and not empty %}
                            <div class="alert alert-danger" role="alert">       
                                <p>{{ errors.firstname }}</p>
                            </div>
                            {% endif %}
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label"></label>
                            <input type="email" class="form-control" id="email" placeholder="E-mail" name="email" value="{{ session.user.email }}">
                            {% if errors.email is defined and not empty %}
                            <div class="alert alert-danger" role="alert">       
                                <p>{{ errors.email }}</p>
                            </div>
                            {% endif %}
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label"></label>
                            <input type="password" class="form-control" id="password" placeholder="Mot de passe" name="password">
                            {% if errors.password is defined and not empty %}
                            <div class="alert alert-danger" role="alert">       
                                <p>{{ errors.password }}</p>
                            </div>
                            {% endif %}
                            {% if errors.password1 is defined and not empty %}
                            <div class="alert alert-danger" role="alert">       
                                <p>{{ errors.password1 }}</p>
                            </div>
                            {% endif %}
                        </div>
                        <div class="mb-3">
                            <label for="check_password" class="form-label"></label>
                            <input type="password" class="form-control" id="check_password" placeholder="Vérification du mot de passe" name="check_password">
                            {% if errors.check_password is defined and not empty %}
                            <div class="alert alert-danger" role="alert">       
                                <p>{{ errors.check_password }}</p>
                            </div>
                            {% endif %}
                        </div>
                        <div class="mb-3">
                            <label for="adress" class="form-label"></label>
                            <input type="text" class="form-control" id="adress" placeholder="Adresse" name="adress" value="{{ session.user.adress }}">
                            {% if errors.adress is defined and not empty %}
                            <div class="alert alert-danger" role="alert">       
                                <p>{{ errors.adress }}</p>
                            </div>
                            {% endif %}
                        </div>
                        <div class="mb-3">
                            <label for="phone" class="form-label"></label>
                            <input type="number" class="form-control" id="phone" placeholder="Numéro de téléphone" name="phone" value="{{ session.user.phone }}">
                            {% if errors.phone is defined and not empty %}
                            <div class="alert alert-danger" role="alert">       
                                <p>{{ errors.phone }}</p>
                            </div>
                            {% endif %}
                        </div>
                        <div class="mt-3">
                            <label for="birthday" class="form-label">Date de naissance : </label>
                            <input type="date" class="form" id="birthday" name="birthday" value="{{ session.user.birthday }}">
                            {% if errors.birthday is defined and not empty %}
                            <div class="alert alert-danger" role="alert">       
                                <p>{{ errors.birthday }}</p>
                            </div>
                            {% endif %}  
                        </div>
                        <div class="mt-3 text-center">
                            <button type="submit" class="btn btn-primary">Modifier</button>
                        </div>
                    </form>
                </section>    
			</main>
		</div>
	</div>
{% endblock %}