{% extends 'adminlayout.html.twig' %}
{% block title %} - Admin {% endblock %}
{% block content %}
    {% include "Admin/adminheader.html.twig" %}
    <main>
        <div class="time"><span class="defile"> {{ "now"|date("H:i:s d/m/Y") }}</span></div>
        <div class="cards">
            <div class="card-single">
                <div>
                    <h1> {{ users }} </h1>
                    <span> Users </span>
                </div>
                <div>
                    <span class="las la-users"></span>
                </div>
            </div>
            <div class="card-single">
                <div>
                    <h1> {{ sales }} </h1>
                    <span> Total Sales </span>
                </div>
                <div>
                    <span class="las la-file-invoice-dollar"></span>
                </div>
            </div>
            <div class="card-single">
                <div>
                    <h1> {{ orders }} </h1>
                    <span> orders </span>
                </div>
                <div>
                    <span class="las la-edit"></span>
                </div>
            </div>
            <div class="card-single">
                <div>
                    <h1> {{ tickets }} </h1>
                    <span> tickets </span>
                </div>
                <div>
                    <span class="las la-envelope"></span>
                </div>
            </div>
        </div>

        <div class="recent-grid">
            <div class="orders">
                <div class="card">
                    <div class="card-header">
                        <h3> Recent Order</h3>
                        <button> See all> <span class="las la-arrow-right"></span></button>
                    </div>

                    <div class="card-body">
                        <div class="table-responsive">
                            <table width="100%">
                                <thead>
                                <tr>
                                    <td> User°</td>
                                    <td> Order N°</td>
                                    <td> Status</td>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td> value from table User Name or ID</td>
                                    <td> value from table Order</td>
                                    <td><span class="status"></span> pending
                                    </td>
                                </tr>
                                <tr>
                                    <td> value from table User Name or ID</td>
                                    <td> value from table Order</td>
                                    <td><span class="status"></span> in progress
                                    </td>
                                </tr>
                                <tr>
                                    <td> value from table User Name or ID</td>
                                    <td> value from table Order</td>
                                    <td><span class="status"></span> delivered
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="users">
                <div class="card">
                    <div class="card-header">
                        <h3> New Users</h3>
                        <a href="../../user/index"><button> See all <span class="las la-arrow-right"></span></button></a>
                    </div>
                    <div class="card-body">
                        {% for i in 0..2 %}
                            <div class="user">
                            <div class="info">
                                <img src="{{ userInfo[i].userImg }}" width="60px" height="50px" alt="">
                                <div>
                                    <h4> {{ userInfo[i].username }} </h4>
                                    <small> {{ userInfo[i].birthday }} </small>
                                </div>
                            </div>
                            <div class="contact">
                                <span class="las la-user-circle"></span>
                                <span class="las la-comment"></span>
                                <span class="las la-phone"></span>
                            </div>
                        </div>
{% endfor %}
                    </div>
                </div>
            </div>
        </div>


    </main>

</div>
{% endblock %}
