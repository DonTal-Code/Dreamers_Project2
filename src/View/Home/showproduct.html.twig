{% extends 'layout.html.twig' %}

{% block content %}
	{% include "_nav_user.html.twig" %}
	<div class="container-fluid pt-5" id="body">
		<div class="row">
			<main class="container-fluid col-lg-11" id="edit">
				<h1 class="text-white text-center mt-3">{{ product.name }}
				</h1>
				<div class="card text-center" style="width: 20rem">
					<img src="{{ product.image }}" class="img-fluid" alt="image du produit" id="show_product_image">
					<div class="card-body">
						<h5 class="card-title">{{ product.id }}.
							{{ product.name }}</h5>
						<p class="card-text">Prix:
							{{ product.price }}
							€</p>
						{% if product.stock  > 5 %}
							<p class="card-text bg-success">
								<small>En stock</small>
							</p>
						{% endif %}
						{% if product.stock <= 5 and product.stock > 0 %}
							<p class="card-text bg-warning">
								<small>Bientôt épuisé</small>
							</p>
						{% endif %}
						{% if product.stock == 0 %}
							<p class="card-text bg-danger">
								<small>En cours de réapprovisionnement</small>
							</p>
						{% endif %}
						<p class="card-text">{{ product.description }}</p>
						<p class="card-text">Poids:{{ product.weight }}
							kg</p>
						<a class="button_gradient button-big" href="/home/addToCart/{{ product.id }}">Ajouter au panier</a>
					</div>
				</div>
			</main>
		</div>
	</div>
{% endblock %}
